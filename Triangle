package JavaOOP.TriangleOOP;

/**
 * Created by Администратор on 11.05.2016.
 */
public final class Triangle {

    private Point a;
    private Point b;
    private Point c;
    private String typeOfTriangle;

    /*-------Constructor------*/

    public Triangle(Point a, Point b, Point c, String typeOfTriangle) {
        this.a = a;
        this.b = b;
        this.c = c;
        this.typeOfTriangle = typeOfTriangle;
    }

    /*-------Getters and setters-------*/

    public Point getA() {
        return a;
    }

    public void setA(Point a) {
        this.a = a;
    }

    public Point getB() {
        return b;
    }

    public void setB(Point b) {
        this.b = b;
    }

    public Point getC() {
        return c;
    }

    public void setC(Point c) {
        this.c = c;
    }

    public String getTypeOfTriangle() {
        return typeOfTriangle;
    }

    public void setTypeOfTriangle(String typeOfTriangle) {
        this.typeOfTriangle = typeOfTriangle;
    }

    /*-------To String-------*/
    @Override
    public String toString() {
        return "Triangle (" +
                "A = " + a +
                ", B = " + b +
                ", C = " + c +
                ", Type of triangle = " + typeOfTriangle +
                ')'+'\n';
    }
}
